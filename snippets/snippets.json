{
    "Stencil Component": {
        "prefix": "stc",
        "body": [
            "import { Component } from '@stencil/core';",
            "",
            "",
            "@Component({",
            "\ttag: 'my-component',",
            "\tstyleUrl: 'my-component.scss'",
            "})",
            "export class MyComponent {",
            "",
            "\trender() {",
            "\t\treturn (",
            "\t\t\t<p>My name is Stencil</p>",
            "\t\t);",
            "\t}",
            "}"
        ],
        "description": "Generate a new Stencil component"
    },
    "Stencil State": {
        "prefix": "sts",
        "body": [
            "@State() newState: any;"
        ],
        "description": "Add a new State"
    },
    "Stencil Prop": {
        "prefix": "stp",
        "body": [
            "@Prop() newProp: any;"
        ],
        "description": "Add a new Prop"
    }
}